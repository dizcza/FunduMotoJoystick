<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_weight="1.0">

    <LinearLayout
        android:id="@+id/bluetooth_connection"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ToggleButton
            android:id="@+id/bluetooth_connection_toggle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textOff="Connect"
            android:textOn="Disconnect" />

        <TextView
            android:id="@+id/bluetooth_connection_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:layout_marginStart="10dp"
            android:hint="Connection status" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/bluetooth_connection"
        android:layout_marginTop="50dp">

        <com.marcinmoskala.arcseekbar.ArcSeekBar
            android:id="@+id/servo_slider"
            android:layout_width="300dp"
            android:layout_height="100dp"
            android:layout_centerHorizontal="true"
            app:thumb="@drawable/slider_thumb"
            app:progressBackgroundColor="@color/sliderBack"
            app:progressBackgroundWidth="20dp"
            app:progressWidth="20dp"
            app:progress="50"/>

        <RelativeLayout
            android:id="@+id/keypad_box"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/servo_slider">

            <ImageView
                android:id="@+id/circle_background_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleType="fitXY"
                android:layout_centerInParent="true"
                android:layout_margin="45dp"
                android:src="@drawable/circle_background"/>

            <ImageView
                android:id="@+id/circle_direction_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:src="@drawable/circle_direction" />
        </RelativeLayout>

    </RelativeLayout>


</RelativeLayout>
